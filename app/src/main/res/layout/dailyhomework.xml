<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dailyhomework"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="school.diary.Dailyhomework">
        <TextView
        android:text="Daily Homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="131dp"
        android:layout_marginStart="131dp"
        android:id="@+id/testmarks"
        android:layout_alignParentTop="true" />
    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="Datedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calendarView"
        android:layout_alignRight="@+id/testmarks"
        android:layout_alignEnd="@+id/testmarks"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/datedisplay" />


    <TextView
        android:text='English:'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/english"
        android:layout_below="@+id/datedisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tamil:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tamil"
        android:layout_below="@+id/english" />

    <TextView
        android:text="Science:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tamil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/science" />

    <TextView
        android:text="Social:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/science"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/social" />

    <TextView
        android:text="Maths:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/social"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/maths" />

    <TextView
        android:text="Remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maths"
        android:layout_alignRight="@+id/datedisplay"
        android:layout_alignEnd="@+id/datedisplay"
        android:id="@+id/remarktitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remarktitle"
        android:layout_alignRight="@+id/remarktitle"
        android:layout_alignEnd="@+id/remarktitle"
        android:layout_marginTop="10dp"
        android:id="@+id/remarks"
        android:text="textview" /><![CDATA[

    >
]]>
</RelativeLayout>

</ScrollView>